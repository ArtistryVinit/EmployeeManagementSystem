@model IEnumerable<EmployeeManagementSystem.Models.LeaveApplication>

@{
	ViewData["Title"] = "Index";
}


<p>
	<a asp-action="Create" class="btn btn-primary"> <i class="fa fa-plus"></i>Add New Leave Application</a>
</p>
<div class="card">
	<div class="card-header">
		<h3 class="card-title">Leave Applications List</h3>
	</div>
	<div class="card-body">

		<table id="example1" class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Employee.FullName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.NoOfDays)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.StartDate)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.EndDate)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Duration.Description)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.LeaveType.Name)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Attachment)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Status.Description)
					</th>

					<th>Edit</th>
					<th>View</th>
					<th>Delete</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Employee.Address)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.NoOfDays)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.StartDate)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.EndDate)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Duration.Id)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.LeaveType.Id)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Attachment)
						</td>

						<td>
							<div class="input-group input-group-lg">
								<div class="input-group-prepend">
									<button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
										Action
									</button>

									<ul class="dropdown-menu">
										<li class="dropdown-item">
											<a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary"><i class="fa fa-edit"></i>Edit</a>
										</li>

										<li class="dropdown-divider"></li>
										<li class="dropdown-item"> <a asp-action="Details" asp-route-id="@item.id" class="btn btn-warning"><i class="fa fa-eye"></i>View</a></li>
										<li class="dropdown-divider"></li>
										<li class="dropdown-item"> <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger"><i class="fa fa-trash"></i>Delete</a></li>
										<li class="dropdown-divider"></li>
										<li class="dropdown-item"> <a asp-action="ApproveLeave" asp-route-id="@item.id" class="btn btn-primary"><i class="fa fa-check" data-toggle="modal" data-target="#modal-lg"></i>Approve</a></li>

										<li class="dropdown-item"> <a asp-action="RejectLeave" asp-route-id="@item.id" class="btn btn-danger"><i class="fa fa-check" data-toggle="modal" data-target="#modal-lg"></i>Reject</a></li>

									</ul>

								</div>
							</div>
						</td>



						@* <td>
							<a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary"> <i class="fa fa-eye"></i> Edit</a>
						</td>

						<td>
							<a asp-action="Details" asp-route-id="@item.id" class="btn btn-warning"> <i class="fa fa-eye"></i> View</a>
						</td>

						<td>
							<a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger"> <i class="fa fa-trash"></i>	Delete</a>
						</td> *@


					</tr>
				}
			</tbody>
		</table>
	</div>
</div>