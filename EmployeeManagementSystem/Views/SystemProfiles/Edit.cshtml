@model EmployeeManagementSystem.Models.SystemProfile

@{
    ViewData["Title"] = "Edit System Profile";
}

<h2>Edit System Profile</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProfileId" class="control-label"></label>
        <select asp-for="ProfileId" asp-items="ViewBag.ProfileId" class="form-control">
            <option value="">-- Select Profile --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
